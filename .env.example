# API Configuration
API_HOST=localhost
API_PORT=8000

# LM Studio Configuration
LM_STUDIO_API_URL=http://localhost:1234/v1/chat/completions
LM_STUDIO_TIMEOUT=10

# Audio Configuration
AUDIO_MAX_SIZE=10485760  # 10MB in bytes
AUDIO_SUPPORTED_FORMATS=mp3,wav,webm

# Model Configuration
WHISPER_MODEL=base  # Options: tiny, base, small, medium, large
TTS_ENGINE=pyttsx3  # Text-to-speech engine

# Logging Configuration
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=app.log

# Security
CORS_ORIGINS=http://localhost:3000  # Comma-separated list of allowed origins
API_KEY=your_api_key_here  # Optional: for API authentication

# GEMINI CONFIGURATION
GEMINI_MODEL=your_gemini_model_here
GEMINI_API_KEY=your_gemini_api_key